{
    "php_html_echo": {
        "prefix": "hch",
        "body": [
            "<?= $1; ?>"
        ],
        "description": "PHP echo tag for HTML files."
    },
    "php_a_echo": {
        "prefix": "echol",
        "body": [
            "<a href=\"<?= $1; ?>\">$2</a>"
        ],
        "description": "<a> tag with php echo."
    },
    "php_full_tag": {
        "prefix": "php",
        "body": [
            "<?php $1; ?>"
        ],
        "description": "Create a full PHP tag."
    }
}